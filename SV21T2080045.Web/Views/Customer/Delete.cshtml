@model Customer
@{
    ViewBag.Title = "Xóa khách hàng";
}
<div class="box box-danger">
    <div class="box-body">
        <form action="~/Customer/Delete/@Model.CustomerID" method="post">
            <div class="form-group">
                <label>Tên Khách Hàng:</label>
                <p type="text" class="form-control-static">@Model.CustomerName</p>
            </div>
            <div class="form-group">
                <label>Tên Giao Dịch:</label>
                <p type="text" class="form-control-static">@Model.ContactName </p>
            </div>
            <div class="form-group">
                <label>Điện Thoại</label>
                <p type="text" class="form-control-static">@Model.Phone</p>
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <p type="text" class="form-control-static">@Model.Address</p>
            </div>
            <div class="form-group">
                <label>Tỉnh Thành</label>
                <p type="text" class="form-control-static">@Model.Province</p>
            </div>

            <div class="form-group">
                <label>Trạng thái</label>
                <p type="text" class="form-control-static">@(Model.IsLocked ? "Đang Bị Khóa" : "Đang hoạt động")</p>
            </div>
            <div class="form-group text-right">
                @if(_21T1080045.BusinessLayers.CommonDataService.InUsedCustomer(Model.CustomerID) == false)
                {
                    <button type="submit" class="btn btn-danger"><i class="fa fa-trassh"></i>Xác nhận xóa</button>                  
                }
                <a href="~/Customer" class="btn btn-default">Quay Lại</a>
            </div>
        </form>

    </div>

</div>
