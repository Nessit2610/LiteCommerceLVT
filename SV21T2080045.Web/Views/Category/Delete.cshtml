@model Category
@{
    ViewBag.Title = "Xóa loại hàng";
}
<div class="box box-danger">
    <div class="box-body">
        <form action="~/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label>Category Name:</label>
                <p type="text" class="form-control-static">@Model.CategoryName</p>
            </div>
            <div class="form-group">
                <label>Description:</label>
                <p type="text" class="form-control-static">@Model.Description</p>
            </div>
            <div class="form-group text-right">
                @if (_21T1080045.BusinessLayers.CommonDataService.InUsedCategory(Model.CategoryID) == false)
                {
                    <button type="submit" class="btn btn-danger"><i class="fa fa-trassh"></i>Xác nhận xóa</button>
                }
                <a href="~/Category" class="btn btn-default">Quay Lại</a>
            </div>
        </form>

    </div>

</div>

