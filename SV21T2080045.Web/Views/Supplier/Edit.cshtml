@model Supplier
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />
            <div class="form-group">
                <label>Supplier Name</label>
                <input type="text" class="form-control" name="@nameof(Model.SupplierName)" value="@Model.SupplierName">
                @Html.ValidationMessage(nameof(Model.SupplierName))
            </div>
            <div class="form-group">
                <label>Contact Name</label>
                <input type="text" class="form-control" name="@nameof(Model.ContactName)" value="@Model.ContactName">
                @Html.ValidationMessage(nameof(Model.ContactName))
            </div>
            <div class="form-group">
                <label>Province</label>
                <select class="form-control" name="@nameof(Model.Province)">
                    <option value="">--Chọn Tỉnh/Thành--</option>
                    @foreach (var province in _21T1080045.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (province.ProvinceName == Model.Province)
                        {
                            <option selected value="@province.ProvinceName">@province.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@province.ProvinceName">@province.ProvinceName</option>
                        }
                    }
                </select>
                @Html.ValidationMessage(nameof(Model.Province))
            </div>
            <div class="form-group">
                <label>Address</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address">
                @Html.ValidationMessage(nameof(Model.Address))
            </div>
            <div class="form-group">
                <label>Phone</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone))
            </div> 
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="@nameof(Model.Email)" value="@Model.Email">
                @Html.ValidationMessage(nameof(Model.Email))
            </div>

            
            <div class="form-group">
                <button type="submit" class="btn btn-default"><i class="fa fa-floppy-o"></i>Lưu Dữ Liệu</button>
                <a href="~/Supplier" class="btn btn-default">Quay Lại</a>
            </div>
        </form>

    </div>

</div>
